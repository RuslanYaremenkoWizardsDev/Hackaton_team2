<Window x:Class="TornamentManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TornamentManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="660" Width="1030">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="152*"/>
        </Grid.RowDefinitions>


        <TabControl Grid.Row="1" Margin="0,3,0,0" HorizontalAlignment="Stretch">
            <TabItem Header="Tornament">
                <Grid Margin="5,5,5,5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="44*"/>
                        <RowDefinition Height="523*"/>
                    </Grid.RowDefinitions>
                    <DockPanel Grid.Row="0" HorizontalAlignment="Left">
                        <Button DockPanel.Dock="Left" Content="Create Tornaments" BorderBrush="Black" Background="#FFB7AEAE" Height="30" Width="190" Margin="5,5,5,5" />
                        <Button DockPanel.Dock="Left" Content="Save Tornaments" BorderBrush="Black" Background="#FFB7AEAE"  Height="30" Width="190" Margin="5,5,5,5"/>
                        <Button DockPanel.Dock="Left" Content="Load Tornaments" BorderBrush="Black" Background="#FFB7AEAE"  Height="30" Width="190" Margin="5,5,5,5"/>
                    </DockPanel>
                    <ListBox Grid.Row="1" Margin="5,5,5,5">
                        <ListBoxItem Height="39" Background="#FF5F3333"/>

                    </ListBox>

                </Grid>

            </TabItem>
            <TabItem Header="Tornament statistic">

            </TabItem>

        </TabControl>
        <Label x:Name="LogOutLabel" Content="Log out" HorizontalAlignment="Right" Margin="956,3,0,0" VerticalAlignment="Top" Height="23" Width="64" FontSize="10" BorderBrush="#FF8A0202" Foreground="Black" FontWeight="Bold"/>
    </Grid>
</Window>
